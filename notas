*****************
*   entidades   *
*****************

session{
    uuid                string(40)
    useruuid            string(40)
    token               string(255)
    incomingDate        unixTimestamp
    deleted             boolean
}

users{
    uuid                string(40)
    name                string(30)
    username            string(30)
    avatar              string(30)
    active              boolean
    deleted             boolean
}

client{
    uuid                string(40)
    name                string(30)
    businessName        string(30)
    cuit                number(10)
    adress              string(30)
    longitude           number(20)
    latitude            number(20)
    incomingDate        unixTimestamp
    observation         string(200)
    active              boolean
    deleted             boolean
}

product{
    uuid                string(40)
    itemuuid            string(40)
    price               number
    profit              enum
    unitsperbox         number
    active              boolean
    deleted             boolean
}

item{
    uuid                string(40)
    type                enum
    subtype             enum
    name                string(30)
    brand               string(30)
    measurement         enum
    quantity            int

}

sale{
    uuid                string(40)
    useruuid            string(40)
    clientuuid          string(40)
    billid              string(40)
    incomingDate        unixTimestamp
    totalTaxes          number
    totalprice          number
    totalprofit         number
    deleted             boolean
}

bill{
    id                  number AI
    productuuid         string(40)
    billingType         enum
    taxes               enum
    deleted             boolean
}



